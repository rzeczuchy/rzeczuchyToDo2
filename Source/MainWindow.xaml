<Window x:Class="rzeczuchyToDo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rzeczuchyToDo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="520">
    <Window.Resources>
        <Style TargetType="Button" x:Key="DeleteButton">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Content" Value="X"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="20"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NewToDoTextBox"
                 Grid.Row="0"/>
        <Button x:Name="AddToDoButton"
                Content="Add"
                Click="AddToDoButton_Click"
                Grid.Row="1"/>
        <ListView x:Name="ToDoListView"
                  Height="Auto"
                  VerticalAlignment="Top"
                  BorderThickness="0"
                  Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ToDo}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Name="ToDoCheckBox"
                                      IsChecked="{Binding IsChecked}"
                                      Checked="ToDoCheckBox_Checked"
                                      Unchecked="ToDoCheckBox_Checked"
                                      Grid.Column="0"/>
                        <TextBlock Name="NameBlock"
                                       Text="{Binding Name}"
                                       Foreground="{Binding TextColor}"
                                       Grid.Column="1"/>
                        <Button x:Name="DeleteButton"
                                    Click="DeleteButton_Click"
                                    Style="{StaticResource DeleteButton}"
                                    Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
